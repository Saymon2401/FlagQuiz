<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/main_background"
    android:paddingTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseGameActivity">
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/icon_back"
        android:background="@drawable/icon_back_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="-20dp"
        android:src="@drawable/icon_bitcoin"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/count_bitcoin"
        app:layout_constraintBottom_toBottomOf="@id/count_bitcoin"
        app:layout_constraintRight_toLeftOf="@id/count_bitcoin"/>
    <TextView
        android:id="@+id/count_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1234"
        android:textSize="25sp"
        android:textColor="#BB8140"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/icon_bitcoin_bg"
        android:paddingHorizontal="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toLeftOf="@id/icon_diamond"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/icon_diamond"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="-20dp"
        android:src="@drawable/icon_diamond"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="@id/count_diamond"
        app:layout_constraintBottom_toBottomOf="@id/count_diamond"
        app:layout_constraintRight_toLeftOf="@id/count_diamond"/>
    <TextView
        android:id="@+id/count_diamond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="25sp"
        android:textColor="#5522D7"
        android:gravity="center"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/icon_diamond_bg"
        android:paddingHorizontal="25dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card1"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_star_false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_bg1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Страны"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintBottom_toTopOf="@id/card_bg1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/card_bg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/continent_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/card1_time"
            app:layout_constraintLeft_toLeftOf="@id/card_bg1"
            app:layout_constraintBottom_toBottomOf="@id/card_bg1">
            <TextView
                android:id="@+id/card1_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="1"/>
            <TextView
                android:id="@+id/card1_level_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="/ 10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/card1_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintLeft_toRightOf="@id/level1"
            app:layout_constraintRight_toRightOf="@id/card_bg1"
            app:layout_constraintBottom_toBottomOf="@id/card_bg1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card2"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_star_false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_bg2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Викторина"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintBottom_toTopOf="@id/card_bg2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/card_bg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/continent_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/card2_time"
            app:layout_constraintLeft_toLeftOf="@id/card_bg2"
            app:layout_constraintBottom_toBottomOf="@id/card_bg2">
            <TextView
                android:id="@+id/card2_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="1"/>
            <TextView
                android:id="@+id/card2_level_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="/ 10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/card2_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintLeft_toRightOf="@id/level2"
            app:layout_constraintRight_toRightOf="@id/card_bg2"
            app:layout_constraintBottom_toBottomOf="@id/card_bg2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card3"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/card2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_star_false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_bg3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Столица"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintBottom_toTopOf="@id/card_bg3"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/card_bg3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/continent_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/card3_time"
            app:layout_constraintLeft_toLeftOf="@id/card_bg3"
            app:layout_constraintBottom_toBottomOf="@id/card_bg3">
            <TextView
                android:id="@+id/card3_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="1"/>
            <TextView
                android:id="@+id/card3_level_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="/ 10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/card3_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintLeft_toRightOf="@id/level3"
            app:layout_constraintRight_toRightOf="@id/card_bg3"
            app:layout_constraintBottom_toBottomOf="@id/card_bg3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card4"
        android:layout_width="0dp"
        android:layout_height="130dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/card3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon_star_false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/card_bg4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Карты"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintBottom_toTopOf="@id/card_bg4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/card_bg4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/continent_bg"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <LinearLayout
            android:id="@+id/level4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@id/card4_time"
            app:layout_constraintLeft_toLeftOf="@id/card_bg4"
            app:layout_constraintBottom_toBottomOf="@id/card_bg4">
            <TextView
                android:id="@+id/card4_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="1"/>
            <TextView
                android:id="@+id/card4_level_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_medium"
                android:text="/ 10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/card4_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintLeft_toRightOf="@id/level4"
            app:layout_constraintRight_toRightOf="@id/card_bg4"
            app:layout_constraintBottom_toBottomOf="@id/card_bg4"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/bottom_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Азия"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:fontFamily="@font/montserrat_medium"
        android:background="@drawable/btn_bottom"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>