<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/main_world"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORLD"
        android:textSize="100sp"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:layout_marginRight="-50dp"
        android:fontFamily="@font/kufam_regular"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flags"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:layout_marginTop="-115dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/kufam_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_world"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GAME"
        android:fontFamily="@font/kufam_bold"
        android:textSize="25sp"
        android:textColor="#54A900"
        android:layout_marginTop="-105dp"
        android:paddingLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_world"/>
    <ImageView
        android:id="@+id/blur_back"
        android:layout_width="530dp"
        android:layout_height="530dp"
        android:src="@drawable/main_globe_blur"
        android:layout_marginRight="-180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/globe"
        android:layout_width="420dp"
        android:layout_height="420dp"
        android:src="@drawable/main_globe"
        android:layout_marginRight="-130dp"
        android:alpha="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn"
        android:layout_marginHorizontal="20dp"
        android:text="Начать"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>